#lang racket
(define (square-sum a b)
    (+ (* a a) (* b b)))
(define (square-greater-two a b c)
    (if (>= a b)
        (if (>= b c)
            (square-sum a b)
            (square-sum a c))
        (if (>= a c)
            (square-sum b a)
            (square-sum b c))))
(define (power-close-to b n)
  (define (which-power x)
    (if (<= (expt b x) n)
        (which-power (+ x 1))
        x))
  (if (= b 1)
      #f
      (which-power 0)))
(power-close-to 3 27)
(square-greater-two 3 1 2)